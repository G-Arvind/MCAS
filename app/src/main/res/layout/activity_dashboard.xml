<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dashboard"
        android:background="#fff">

        <android.support.v7.widget.CardView
            android:id="@+id/ride"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_marginLeft="15dp"
            app:cardElevation="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bike_ride">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/monts"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="Start Ride"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="16dp"/>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/assistance"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            app:cardElevation="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bike_service">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp">

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/monts"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="90dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Emergency Contact"
                        android:textColor="#ffffff"
                        android:textSize="16dp"/>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/editProfile"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            app:cardElevation="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_profile">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp">

                    <TextView
                        android:textStyle="bold"

                        android:layout_marginLeft="180dp"
                        android:fontFamily="@font/monts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Edit Profile"
                        android:textColor="#000000"
                        android:textSize="16dp"/>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/accidentProne"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            app:cardElevation="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/accident">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/monts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Accident Prone Areas"
                        android:textColor="#000000"
                        android:textSize="16dp"/>

                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>