<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:id="@+id/ll"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:fontFamily="@font/monts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interrupt"
            android:layout_marginTop="5dp"
            android:text="Sign Up"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_gravity="center" />

        <EditText
            android:fontFamily="@font/monts"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000"
            android:hint="Name"
            android:textColorHint="#4d4f53"
            android:id="@+id/nameEditText" />

        <EditText
            android:fontFamily="@font/monts"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000"
            android:hint="UID"
            android:textColorHint="#4d4f53"
            android:id="@+id/uid" />


        <EditText
            android:fontFamily="@font/monts"
            android:id="@+id/phoneEditText"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000"
            android:hint="Mobile Number"
            android:textColorHint="#4d4f53"/>

        <EditText
            android:fontFamily="@font/monts"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000"
            android:hint="Name of Guardian"
            android:textColorHint="#4d4f53"
            android:id="@+id/guardianName" />

        <EditText
            android:fontFamily="@font/monts"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000"
            android:hint="Guardian Mobile Number"
            android:textColorHint="#4d4f53"
            android:id="@+id/guardianNumber" />


        <EditText
            android:fontFamily="@font/monts"
            android:id="@+id/passEditText"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000"
            android:hint="Password"
            android:textColorHint="#4d4f53"/>



        <EditText
            android:fontFamily="@font/monts"
            android:id="@+id/repass"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000"
            android:hint="Re-enter Password"
            android:textColorHint="#4d4f53"/>

        <EditText
            android:padding="10dp"
            android:background="@drawable/edittext"
            android:textColorHint="#4d4f53"
            android:textColor="#000"
            android:textSize="15dp"
            android:fontFamily="@font/monts"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:id="@+id/dob"
            android:clickable="true"
            android:hint="Dob"
            android:layout_height="wrap_content" />

        <EditText
            android:fontFamily="@font/monts"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="#000"
            android:hint="Blood Group"
            android:textColorHint="#4d4f53"
            android:id="@+id/bloodGroup" />

        <EditText
            android:padding="10dp"
            android:background="@drawable/edittext"
            android:id="@+id/medConditions"
            android:textColorHint="#4d4f53"
            android:textColor="#000"
            android:textSize="15dp"
            android:fontFamily="@font/monts"
            android:hint="Notable Medical Conditions (If Any)"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
        />



        <Button
            android:fontFamily="@font/monts"
            android:id="@+id/registerButton"
            android:layout_gravity="center"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="55dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8734A"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

    </LinearLayout>
</ScrollView>